<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">


        <ImageView
            android:id="@+id/search_poster_img"
            android:layout_width="75.6dp"
            android:layout_height="94.5dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingBottom="6dp"
                android:textColor="@color/reader_text_balck"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/search_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:textColor="@color/reader_text_defult"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/search_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:textColor="@color/catalog_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/search_updataTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:textColor="@color/catalog_text"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

