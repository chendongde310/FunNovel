<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp">


    <ImageView
        android:id="@+id/search_poster_img"
        android:layout_width="108dp"
        android:layout_height="135dp"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search_poster_img"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/search_poster_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingBottom="14dp"
            android:textColor="@color/reader_text_balck"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/reader_text_defult"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/search_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:textColor="@color/catalog_text"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/search_updataTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:textColor="@color/catalog_text"
            android:textSize="14sp" />




    </LinearLayout>


</RelativeLayout>

